//4.Дано два числа, например 3 и 56, необходимо составить следующие строки: 3 + 56 = 59 3 – 56 = -53 3 * 56 = 168 Используем метод StringBuilder.append().
class Main {

  public static String appendStr(String str1, String str2, String str3){
    StringBuilder builder = new StringBuilder(str1+" ");
    builder.append("+"+" "+str2+ " ");
    builder.append("="+" "+str3);
    String result = builder.toString();
    return result;
  }
  public static void main(String[] args) {
    
    int a = 3;
    int b = 56;
    int c = a + b;
    int d = a - b;
    int e = a * b;
    String num1 = Integer.toString(a);
    String num2 = Integer.toString(b);
    String sum = Integer.toString(c);
    String sub = Integer.toString(d);
    String mult = Integer.toString(e);
    System.out.println(appendStr(num1,num2,sum));
    System.out.println(appendStr(num1,num2,sub));
    System.out.println(appendStr(num1,num2,mult));
